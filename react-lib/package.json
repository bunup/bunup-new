{
	"name": "my-react-lib",
	"description": "A react component library",
	"version": "0.1.0",
	"type": "module",
	"files": ["dist"],
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"dev:test": "bun run --cwd test dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"tsc": "tsc --noEmit",
		"release": "bumpp --commit --push --tag",
		"publish:ci": "bun publish --access public --no-git-checks",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/bun": "^1.2.20",
		"@types/react": "^19.1.9",
		"bumpp": "^10.2.2",
		"bunup": "^0.8.72",
		"husky": "^9.1.7",
		"lightningcss": "^1.30.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0",
		"react": "^18.0.0 || ^19.0.0 || ^19.0.0-rc",
		"react-dom": "^18.0.0 || ^19.0.0 || ^19.0.0-rc"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/username/repo-name.git"
	},
	"bugs": {
		"url": "https://github.com/username/repo-name/issues"
	},
	"workspaces": ["test"],
	"homepage": "https://github.com/username/repo-name#readme"
}
